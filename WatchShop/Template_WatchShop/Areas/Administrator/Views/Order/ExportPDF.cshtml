@using  ProjectLibrary.Database
@{
    Layout = null;
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    var products = Session["detailOrder"] as Order;

}



<div class="span12">
    <div class="widget ">

        <div class="widget-header">
            <i class=" icon-info-sign"></i>
            <h3>Chi tiết đơn đặt</h3>
        </div> <!-- /widget-header -->
        <div class="widget-content">
            <div id="infobook">
                <div class="container-h2"><h2>Thông tin đặt hàng</h2></div>

                <div class="infotitlebook"><span>Code: </span> <span class="infob">@products.Code</span></div>
                <div class="infotitlebook"><span>Ngày đặt hàng: </span> <span class="infob">@products.DateOrder</span></div>
                <div class="infotitlebook"><span>Loại phòng đã đặt: </span> <span class="infob">@products.InfoBooking</span></div>
                <div class="infotitlebook"><span>Tổng tiền: </span> <span class="infob">@String.Format(format, "{0:c0}", products.TotalMoney)</span></div>
            </div>
            <div id="infoRight">
                <div id="infocustumer">
                    <div class="container-h2"></><h2>Thông tin khách hàng</h2></div>
                    <div class="infoc"><span>Họ tên: </span> <span class="infod">@products.FullName</span></div>
                    <div class="infoc"><span>Địa chỉ: </span> <span class="infod">@products.Address</span></div>
                    <div class="infoc"><span>Email: </span> <span class="infod">@products.Email</span></div>
                    <div class="infoc"><span>Số điện thoại: </span> <span class="infod">@products.Phone</span></div>
                    <div class="infoc">
                        <span>Yêu câu khác: </span>
                        <span class="infod">@products.Request</span>
                    </div>
                </div>
            </div>
            <div class="infoc">
                <span> Đơn hàng: </span> <span class="infod">
    @if (products.Completed == 0)
    {
        <span class="infod">Đã đăng ký</span>
    }
    else if (products.Completed == 1)
    {
        <span class="infod">Đang chuyển hàng</span>
    }
    else if (products.Completed == 2)
    {
                                         <span class="infod">Đã hoàn thành</span>
    }
    else if (products.Completed == 3)
    {
                                         <span class="infod">Hủy đơn hàng</span>
    }
    
    else
    {
        <span class="infod">Đơn hàng đã bị hủy</span>
    }
</span>
            </div>

            <div style="clear: both"></div>
        </div>
    </div>
</div>


