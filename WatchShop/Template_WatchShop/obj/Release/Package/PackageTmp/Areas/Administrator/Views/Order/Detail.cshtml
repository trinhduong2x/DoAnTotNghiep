@model  ProjectLibrary.Database.Order
@{
    Layout = null;
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");

}



<div class="span12">
    <div class="widget ">

        <div class="widget-header">
            <i class=" icon-info-sign"></i>
            <h3>Chi tiết đặt hàng</h3>
            <a href="@Url.Action("Index","Order")" class="btn btn-primary" style="margin: 5px; float: right;">Quay lại</a>
        </div> <!-- /widget-header -->
        <div class="widget-content">
            <div id="infobook" >
                <div class="container-h2"><h2>Thông tin đặt hàng</h2></div>

                <div class="infotitlebook" ><span>Code: </span> <span class="infob">@Model.Code</span></div>
                <div class="infotitlebook"><span>Ngày đặt hàng: </span> <span class="infob">@Model.DateOrder</span></div>
                <div class="infotitlebook"><span>Loại phòng đã đặt: </span> <span class="infob">@Model.InfoBooking</span></div>
                <div class="infotitlebook"><span>Tổng tiền: </span> <span class="infob">@String.Format(format, "{0:c0}", Model.TotalMoney)</span></div>
            </div>
            <div id="infoRight">
                <div id="infocustumer">
                    <div class="container-h2"></><h2>Thông tin khách hàng</h2></div>
                    <div class="infoc"><span>Họ tên: </span> <span class="infod">@Model.FullName</span></div>
                    <div class="infoc"><span>Địa chỉ: </span> <span class="infod">@Model.Address</span></div>
                    <div class="infoc"><span>Email: </span> <span class="infod">@Model.Email</span></div>
                    <div class="infoc"><span>Số điện thoại: </span> <span class="infod">@Model.Phone</span></div>
                    <div class="infoc">
                        <span>Yêu câu khác: </span>
                        <span class="infod">@Model.Request</span>
                    </div>
                </div>
            </div>
            <div class="infoc">
                <span> Đơn hàng: </span> <span class="infod">
                    @if (Model.Completed)
                    {
                        <span class="infod">Đang giao</span>
                    }
                    else
                    {
                        <span class="infod">Bị trả hàng</span>
                    }
                </span>
            </div>

            <div style="clear: both"></div>
        </div>
    </div>
</div>
@using (Html.BeginForm("ExportPDF", "Order"))
{
    <input type="hidden" value="@Model.ID" name="ID" />
    <input type="submit" class="btn-quantity plus" value="Export PDF" />
    
}

