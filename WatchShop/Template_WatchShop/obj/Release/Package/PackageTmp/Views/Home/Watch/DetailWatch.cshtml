@using ProjectLibrary.Database
@using Template_WatchShop.Controllers
@model Template_WatchShop.Models.DetailWatch
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int GalleryCount = Model.watchGalleries.Count;
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");

}
<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-5">

            <div class="carousel slide" data-ride="carousel" id="carousel-1">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active"><img class="img-thumbnail w-100 d-block" style="height:473.75px" src="@Model.watch.Image" alt="Slide Image" loading="lazy"></div>
                    @foreach (var item in Model.watchGalleries)
                    {
                        <div class="carousel-item"><img class="img-thumbnail w-100 d-block" src="@item.ImageLarge" alt="Slide Image"></div>

                    }
                </div>
                <div><a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev"><span class="carousel-control-prev-icon"></span><span class="sr-only">Previous</span></a><a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next"><span class="carousel-control-next-icon"></span><span class="sr-only">Next</span></a></div>
                <ol class="carousel-indicators">
                    <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
                    @for (int i = 1; i < GalleryCount; i++)
                    {
                        <li data-target="#carousel-1" data-slide-to="@i"></li>

                    }

                </ol>
            </div>
        </div>
        <div class="col-md-7">
            <h4>@Model.watch.Name - @Model.watch.TypeWatch.Titel</h4>
            @if (Model.watch.Percent > 0)
            {
                <div class="price"><span class="mr-2"><i class="fa fa-rupee text-success"></i>&nbsp; @String.Format(format, "{0:c0}", Model.watch.PriceDiscount)</span><span class="mr-2 cut">@Model.watch.Price</span><span class="text-success">@Model.watch.Percent% OFF</span></div>

            }
            else
            {
                <div class="price"><span class="mr-2"><i class="fa fa-rupee text-success"></i>&nbsp; @String.Format(format, "{0:c0}", Model.watch.Price)</span></div>

            }
        <h4 class="descript" style="display:flex;margin:12px 0 25px 0;font-size:inherit;font-weight:inherit; padding:5px;">
            <div class="item" style="padding: 5px; border-right: 1px solid #dddddd">
                <b class="text" style="line-height:19px;">Đường kính mặt</b><br />
                <span class="num">@Model.watch.FaceDiameter mm</span>
            </div>
            <div class="item" style="padding: 5px; border-right: 1px solid #dddddd">
                <b class="text">Độ chịu nước</b><br />
                                                <span class="num">@Model.watch.WaterProof ATM</span>
            </div>
            <div class="item" style="padding: 5px; border-right: 1px solid #dddddd">
                <b class="text">Chất liệu mặt</b><br />
                                                 <span class="num">@Model.watch.FaceMaterial </span>
            </div>
            <div class="item" style="padding: 5px; border-right: 1px solid #dddddd">
                <b class="text">Năng lượng sử dụng</b><br />
                                                      <span class="num"> @Model.watch.EnergyUse</span>
            </div>
        </h4>
            <div class="d-flex align-items-center mt-5 delivery"><i class="fa fa-map-marker"></i><span class="ml-2">Gọi đặt mua:<br></span><span class="ml-2 mr-2">|<br></span><span class="ml-2 mr-2 text-success">0358127474<br></span></div>
            <hr>
            
            <div class="mt-3">
                @*<a class="btn btn-dark mr-2" href="@Url.Action("addItem","Carts",new { id = Model.watch.ID,@strURL = Request.Url.AbsoluteUri})">Thêm giỏ hàng</a>*@
