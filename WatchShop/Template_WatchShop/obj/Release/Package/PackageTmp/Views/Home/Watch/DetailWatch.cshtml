<section class="single-room">
    <div class="single-room-main">
        <div class="container">
            <h2 class="title">
                Đồng hồ khác
            </h2>
            <div class="sub-title">
                Bạn có thể sẽ thích những chiếc đồng hồ khác
            </div>
            <div class="single-room-list owl-carousel owl-theme">
                @foreach (var item in Model.watches)
                {
                    <div class="single-room-item">
                        @if (item.Percent > 0)
                        {
                        <span class="sale-percent">Sale @item.Percent%</span>
                        }
                        <div class="room-img">
                            <a href="/@Model.MenuAlias/@item.ID/@item.Alias">
                                <img src="@item.Image" style="height:379.66px" alt="">
                            </a>
                        </div>
                        <div class="room-holder">
                            <div class="room-price">
                                @if (item.Percent > 0)
                                {
                                    <div class="wrapper-price">
                                        <span class="price-suffix">Price :</span>
                                        <span class="price-sale">@String.Format(format, "{0:c0}", item.PriceDiscount)</span>
                                        <span class="price-old">- @String.Format(format, "{0:c0}", item.Price)</span>
                                    </div>
                                }
                                else
                                {
                            <div class="wrapper-price">
                                <span class="price-suffix">Price :</span>
                                <span class="price-sale">@String.Format(format, "{0:c0}", item.Price)</span>
                            </div>
                                        }
                                    </div>
                                    <p class="room-title">
                                        <h4>@item.Name  </h4>

                                    </p>
                                    <ul class="room-reload">
                                        <li><i class="far fa-rupee"></i><span>@item.TypeWatch</span></li>
                                        <li><i class="far fa-"></i><span></span></li>
                                        <li><i class="far fa-bed"></i><span>@item.Quality</span></li>
                                    </ul>

                                </div>
                    </div>
                }


            </div>
        </div>
    </div>
</section>